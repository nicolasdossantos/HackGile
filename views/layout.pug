doctype html
html
    head
        title Hackgile
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
        link(href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet")
        link(rel='stylesheet' href='/materialize-css/dist/css/materialize.min.css')
        link(rel='stylesheet' href='/css/style.css')
        link(rel='stylesheet' href='/css/font-awesome.css')
        //link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel='stylesheet' href='/css/materialize-social.css')

    body
        header#top
            div.navbar-fixed   
                nav.nav-extended

                    div.nav-wrapper.white
                        a(href="/")
                            img.responsive-img(src="/images/logo.jpg" width="100px" height="300px")

                        a.right.sidenav-trigger.button-collapse.hide-on-large-only(href='#', data-target='slide-out')
                            i.material-icons.black-text menu
                        ul.right.hide-on-med-and-down
                            if user
                                li
                                    a.black-text(href='/members/logout') Logout
                            else
                                li

                                    a.black-text(href='/members/login') Login
                                li
                                    a.black-text(href='/members/signup') Sign Up
            ul#slide-out.sidenav.white
                if user
                    li
                    .user-view
                        .background
                            img(src='images/default_bg.jpg')
                        a(href='#user')
                            img.circle(src=user.image)
                        a(href='#name')
                            span.name.black-text #{user.firstname}
                        a(href='#email')
                            span.email.black-text #{user.email}
                    li
                        a.black-text(href='/members/logout') Logout
                else
                    li
                        a.black-text(href='/members/login') Login
                    li
                        a.black-text(href='/members/signup') Sign Up
        .container
            br
            != messages('message', locals)
            if errors
                each error, i in errors
                    .card.cardError.red-text #{error.msg}

        main

            block content



        footer.page-footer.teal.accent-4
            .footer-copyright
                .container Test
                a.white-text.right(href='/members/contact_us') Contact Us

            script(src='/materialize-css/dist/js/materialize.min.js')
            script(src='/js/main.js')
            script(type='text/javascript').
                M.AutoInit();
        
